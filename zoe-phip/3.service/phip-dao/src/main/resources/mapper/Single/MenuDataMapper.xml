<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zoe.phip.dao.sm.MenuDataMapper">
    <resultMap id="BaseResultMap" type="com.zoe.phip.model.sm.MenuData">
        <id column="ID" property="id" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result column="NAME" property="name" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result column="CODE" property="code" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result column="ADDRESS" property="address" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result column="FK_PARENT_MENU_ID" property="fkParentMenuId" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result column="CREATE_AT" property="createAt" javaType="java.sql.Timestamp" jdbcType="TIMESTAMP"/>
        <result column="CREATE_BY" property="createBy" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result column="MODIFY_AT" property="modifyAt" javaType="java.sql.Timestamp" jdbcType="TIMESTAMP"/>
        <result column="MODIFY_BY" property="modifyBy" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result column="STATE" property="state" javaType="java.lang.Integer" jdbcType="INTEGER"/>
        <result column="SORT" property="sort" javaType="java.lang.Integer" jdbcType="INTEGER"/>
    </resultMap>
    <insert id="addList" parameterType="java.util.List">
        INSERT INTO SYS_MENU_DATA (ID,NAME,CODE,ADDRESS,FK_PARENT_MENU_ID,CREATE_AT,CREATE_BY,MODIFY_AT,MODIFY_BY,STATE)
        <foreach collection="list" item="item" index="index" close="" open="" separator="union all">
            SELECT
            #{item.id,jdbcType=VARCHAR},
            #{item.name,jdbcType=VARCHAR},
            #{item.address,jdbcType=VARCHAR},
            #{item.fkParentMenuId,jdbcType=VARCHAR},
            #{item.createAt,jdbcType=TIMESTAMP},
            #{item.createBy,jdbcType=VARCHAR},
            #{item.modifyAt,jdbcType=TIMESTAMP},
            #{item.modifyBy,jdbcType=VARCHAR},
            #{item.state,jdbcType=INTEGER},
            #{item.code,jdbcType=VARCHAR},
            #{item.sort,jdbcType=INTEGER}
            FROM DUAL
        </foreach>
    </insert>
    <delete id="deleteByIds" parameterType="java.util.List">
        delete from SYS_MENU_DATA where ID in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>
    <delete id="deleteByList" parameterType="java.util.List">
        delete from SYS_MENU_DATA where ID in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item.id}
        </foreach>
    </delete>
    <select id="getMenuDataList" resultMap="BaseResultMap" parameterType="java.util.Map">
        select * from SYS_MENU_DATA WHERE 1=1
        <if test="key !=null and key !=''">AND (UPPER(NAME) LIKE #{key,jdbcType=VARCHAR} OR UPPER(CODE) LIKE
            #{key,jdbcType=VARCHAR} OR UPPER(ADDRESS) LIKE #{key,jdbcType=VARCHAR})</if>
    </select>

    <update id="updateList"  parameterType="java.util.List">
    <foreach collection="list" item="item" index="index" open="begin" close="end;" separator="">
        update SYS_MENU_DATA
        <set>
            <if test="item.name != null">
                NAME = #{item.name,jdbcType=VARCHAR},
            </if>
            <if test="item.code != null">
                CODE = #{item.code,jdbcType=VARCHAR},
            </if>
            <if test="item.address != null">
                ADDRESS = #{item.address,jdbcType=VARCHAR},
            </if>
            <if test="item.fkParentMenuId != null">
                FK_PARENT_MENU_ID = #{item.fkParentMenuId,jdbcType=VARCHAR},
            </if>
            <if test="item.modifyBy != null">
                MODIFY_BY = #{item.modifyBy,jdbcType=VARCHAR},
            </if>
            <if test="item.state != null">
                STATE = #{item.state,jdbcType=INTEGER},
            </if>
            <if test="item.sort != null">
                SORT = #{item.sort,jdbcType=INTEGER},
            </if>
            MODIFY_AT=sysdate
        </set>
        where id = #{item.id};
    </foreach>
    </update>
</mapper>